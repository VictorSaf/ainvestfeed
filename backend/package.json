{
  "name": "ainvestfeed-backend",
  "version": "0.1.0",
  "private": true,
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "test:ci": "jest --runInBand --ci",
    "type-check": "tsc --noEmit",
    "prepare": "husky install",
    "db:migrate": "npm run build && node -e \"require('ts-node/register');\" && node ./node_modules/typeorm/cli.js migration:run -d dist/db/data-source.js",
    "db:revert": "node ./node_modules/typeorm/cli.js migration:revert -d dist/db/data-source.js",
    "k6:baseline": "k6 run ../k6/news_baseline.js",
    "k6:docker": "docker run --rm -e BASE_URL=http://host.docker.internal:3001 -v \"$PWD/..\":/work -w /work grafana/k6:latest run k6/news_baseline.js"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "husky": "^9.1.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "cross-env": "^10.0.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^30.1.3",
    "pg-mem": "^3.0.5",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tslib": "^2.6.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@sentry/node": "^10.8.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.26",
    "zod": "^4.1.5"
  }
}
